            <% if (latestProd != "") { %>
                <% latestProd.forEach(element => { %>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <a href="/view-product/<%= element.prod_id %>">
                            <!-- Product image-->
                            <img class="card-img-top p-2 bg-light" style="height: 250px;" src="images/products/<%= element.imgpath %>" alt="<%= element.prod_name %>" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                        <span class="product-title"><%= element.prod_name %></span>
                                        <br><br>
                                        <span class="product-price">Php <%= element.prod_srp.toFixed(2) %></span>
                                    </div>
                                </div>
                             </a>
                            <!-- Product actions-->
                            <!-- <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            </div> -->
                        </div>
                    </div>
                <% }) %>
            <% } %>
            
        </div>
        <div class="row">
            <div class="col text-center border-top-0">
                <a class="text-center button active" href="/products">SHOP NOW</a>

<!DOCTYPE html>
<html>

    <%- include("./partials/head.ejs"); %> 

<body>
    <link rel="stylesheet" href="css/login.css">

	<img class="wave" src="images/bigbboy/wave.jpg">
	<div class="container">
		<div class="img">
			<!-- <img src="images/bigbboy/login.svg"> -->
            <img src="images/bigbboy/bboy.png">
		</div>
		<div class="login-content">
			<form action="/register" method="post">
                <!-- <img src="images/bigbboy/bigbboy2.png"> -->
				<!-- <img src="images/bigbboy/bboy.png"> -->
				<h4 class="title">REGISTER</h4>
                <div class="row">
                    <div class="col">
                        <% if (success != "") { %>
                            <div class="alert alert-success text-center" role="alert">
                                <p class="text-center"><%= success %> </p>
                            </div>
                        <% } %>
                        <% if (error != "") { %>
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    <% error.forEach(element => { %>
                                    <li><%= element %></li>
                                    <% }) %>
                                </ul>
                                
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <!-- <h5>Name<span class="text-danger">*</h5> -->
                        <input type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                 </div>
           		<div class="input-div one">
           		   <div class="i">
           		   		<i class="fas fa-user"></i>
           		   </div>
           		   <div class="div">
           		   		<!-- <h5>Username<span class="text-danger">*</h5> -->
           		   		<input type="text" class="form-control" name="username" placeholder="Username">
           		   </div>
           		</div>
                   <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="div">
                        <!-- <h5>Phone Number<span class="text-danger">*</h5> -->
                        <input type="tel" class="form-control" name="phonenum" placeholder="Phone Number">
                    </div>
                 </div>
                 <div class="input-div one">
                    <div class="i"> 
                         <i class="fas fa-envelope"></i>
                    </div>
                    <div class="div">
                         <!-- <h5>Email<span class="text-danger">*</h5> -->
                         <input type="email" class="form-control" name="email" placeholder="Email">
                 </div>
                </div>
           		<div class="input-div pass">
           		   <div class="i"> 
           		    	<i class="fas fa-lock"></i>
           		   </div>
           		   <div class="div">
           		    	<!-- <h5>Password<span class="text-danger">*</h5> -->
           		    	<input type="password" class="form-control" name="password" placeholder="Password*">
            	   </div>
            	</div>
            	<!-- <a href="#">Forgot Password?</a> -->
            	<input type="submit" class="btn" value="Register">
                <div class="div">
					<span>Already have an account?</span>
                    <a class="primary-color active" href="/login">Login.</a>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="js/login.js"></script>
</body>
</html>

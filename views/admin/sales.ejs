<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %> 

<script>
    $(document).ready(function() {
        $('#dataTable').dataTable();
    });
</script>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("./partials/sidebar.ejs") %> 

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include("./partials/topbar.ejs") %> 

                <!-- Begin Page Content -->
                <div class="container my-5">

                    

                    <!-- Page Heading -->

                    <div class="container border-warning border-start border-1 mb-3">
                        <h1 class="h3">Sales Report</h1>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4>Sales Summary</h4>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <label for="">From</label>
                                                <input class="form-control" type="date" name="" id="">
                                            </div>
                                            <div class="col-6">
                                                <label for="">To</label>
                                                <input class="form-control" type="date" name="" id="">
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Generate</button>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4>Sales Per Product</h4>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <div class="">
                                                    <label for="" class="form-label">Product</label>
                                                    <select class="form-select" name="" id="">
                                                        <% products.forEach(element => { %>
                                                            <option value=""><%= element.prod_name %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Generate</button>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4>Sales Per Customer</h4>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <div class="">
                                                    <label for="" class="form-label">Customer</label>
                                                    <select class="form-select" name="" id="">
                                                        <% customers.forEach(element => { %>
                                                            <option value=""><%= element.name %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Generate</button>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                   

                </div>
                <!-- /.container-fluid -->

                <div class="container my-5">
                    <!-- Page Heading -->

                    <div class="container border-warning border-start border-1 mb-3">
                        <h1 class="h3">Sales Report</h1>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Order ID</th>
                                                        <th>Customer Name</th>
                                                        <th>Date Ordered</th>
                                                        <th>Amount</th>
                                                        <th>Payment Method</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (salesReport != "") { %>
                                                     <% salesReport.forEach(element => { %>
                                                        <tr>
                                                            <td><%= element.place_orderid%></td>
                                                            <td><%= element.name%></td> 
                                                            <td><%= element.date.getDate()  + "/" + (element.date.getMonth()+1) + "/" + element.date.getFullYear() %></td>
                                                            <td>â‚± <%= element.totalprice.toFixed(2)%></td>
                                                            <td><%= element.p_method%></td>
                                                            <td class="text-success"><%= element.PO_status %></td>
                                                            <td class="">
                                                                <a class="link-primary nav-link" href="/admin/orders/view/<%= element.place_orderid%>"><i class="fas fa-eye fa-fw"></i>View</a>
                                                            </td>
                                                        </tr>
                                                     <% }) %>
                                                    <% } %>
                                                    
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   

                </div>


                <% if (salesSummary != "") { %>
                    <script>
                      $(document).ready(function() {
                        $("#summaryModal").modal("show");
                      });
                    </script>
  
                    <!-- Modal -->
                  <div class="modal fade" id="summaryModal" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                      <div class="modal-content">
                          <div class="modal-header">
                            <div class="col-6">
                              <h5 class="modal-title" id="modalTitleId">Sales Summary</h5>
                            </div>
                            <div class="col-6 text-end">
                              Date: 
                        
                            </div>
                          </div>
                        <div class="modal-body">
                          <div class="container-fluid">
                            <div class="row">
                              <div class="col-12 text-end">
                                
                              </div>
                            </div>

  
                            
                            
                            
                            
                          </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Print</button>
                        </div>
                      </div>
                    </div>
                  </div>
  
                <% } %>



            </div>

            

            
            <!-- End of Main Content -->

            <%- include("./partials/footer.ejs") %> 
            

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include("./partials/scripts.ejs") %> 

</body>

</html>
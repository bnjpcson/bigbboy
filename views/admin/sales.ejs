<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %> 

<script>
    $(document).ready(function() {
        $('#dataTable').dataTable();
    });
</script>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("./partials/sidebar.ejs") %> 

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include("./partials/topbar.ejs") %> 

                <!-- Begin Page Content -->
                <div class="container my-5">

                    

                    <!-- Page Heading -->

                    <div class="container border-warning border-start border-1 mb-3">
                        <h1 class="h3">Sales Report</h1>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4>Sales Summary</h4>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <label for="">From</label>
                                                <input class="form-control" type="date" name="" id="">
                                            </div>
                                            <div class="col-6">
                                                <label for="">To</label>
                                                <input class="form-control" type="date" name="" id="">
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Generate</button>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4>Sales Per Product</h4>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <div class="">
                                                    <label for="" class="form-label">Product</label>
                                                    <select class="form-select" name="" id="">
                                                        <% products.forEach(element => { %>
                                                            <option value=""><%= element.prod_name %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Generate</button>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4>Sales Per Customer</h4>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <div class="">
                                                    <label for="" class="form-label">Customer</label>
                                                    <select class="form-select" name="" id="">
                                                        <% customers.forEach(element => { %>
                                                            <option value=""><%= element.name %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Generate</button>
                                            </div>
                                        </div>
                                    </div>  
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    

                    <!-- DataTales Example -->
                   

                </div>
                <!-- /.container-fluid -->

            </div>

            

            
            <!-- End of Main Content -->

            <%- include("./partials/footer.ejs") %> 
            

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include("./partials/scripts.ejs") %> 

</body>

</html>
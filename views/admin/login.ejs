<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs"); %> 
<body>

    <div class="container d-flex align-items-center justify-content-center">
        <div class="row">
            <div class="col-sm-12 p-5">
                <div class="card my-5">
                <div class="card-body">
                    <h4 class="card-title text-center my-4">Admin Login</h4>
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <% if (success != "") { %>
                                    <div class="alert alert-success text-center" role="alert">
                                        <p class="mb-0 text-center"><%= success %> </p>
                                    </div>
                                <% } %>
                                <% if (error != "") { %>
                                    <div class="alert alert-danger" role="alert">
                                        <ul>
                                            <% error.forEach(element => { %>
                                            <li><%= element %></li>
                                            <% }) %>
                                        </ul>
                                        
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="row text-left">
                            <div class="col text-left">
                                <form action="/admin/login" method="post">
                                    
                                
                                    <div class="row">
                                        <div class="col-sm-12 mb-3">
                                            <label for="" class="form-label text-left">Username<span class="text-danger">*</span></label>
                                            <input class="form-control" type="text" name="username">
                                        </div>
                                    
                                        <div class="col-sm-12 mb-3">
                                            <label for="" class="form-label">Password<span class="text-danger">*</span></label>
                                            <input class="form-control" type="password" name="password">
                                        </div>
                                    
                                    
                                        
                                        <div class="col-sm-12 mb-3">
                                            <button type="submit" class="btn btn-success w-100 rounded-3">Login</button>
                                        </div>

                                    </div>
                        

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- <%- //include("./partials/footer.ejs"); %>  -->
</body>
</html>
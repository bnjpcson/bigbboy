<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %> 

<script>
    $(document).ready(function() {
        $('#wishTable').dataTable({
            order: [[0, 'desc']]
        });
    });
</script>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("./partials/sidebar.ejs") %> 
        
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include("./partials/topbar.ejs") %> 

                <!-- Begin Page Content -->
                <!-- Pending orders -->
                <div class="container my-5">
                    <!-- Page Heading -->
  
                    <div class="container border-warning border-start border-1 mb-3">
                        <h1 class="h3">Wishlist</h1>
                    </div>

                <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table" id="wishTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Customer Name</th>
                                            <th>Wish</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% if (data != "") { %>
                                       <% data.forEach(element => { %>
                                        <tr>
                                            <td><%= element.wishlist_id%></td>
                                            <td><%= element.name %></td>
                                            <td><%= element.wish %></td>
                                            <td> 
                                                <%= element.date.getDate()  + "/" + (element.date.getMonth()+1) + "/" + element.date.getFullYear()  +" "+ element.date.getHours() + ":" + element.date.getMinutes() %>
                                            </td>
                                        </tr>
                                       <% }) %>
                                    <% } %> 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
  
                </div>
                <!-- /.container-fluid -->

            </div>

            <!-- End of Main Content -->

            <%- include("./partials/footer.ejs") %> 
            

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include("./partials/scripts.ejs") %> 

</body>

</html>
<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs"); %> 
<body>
    <%- include("./partials/nav.ejs"); %> 
    

    <style>
        body {
            font-family: 'Roboto Condensed', sans-serif;
            background-color: #f5f5f5
        }

        .hedding {
            font-size: 20px;
            color: #ab8181;
        }

        .main-section {
            position: absolute;
            left: 50%;
            right: 50%;
            transform: translate(-50%, 5%);
        }

        .left-side-product-box img {
            width: 100%;
        }

        .left-side-product-box .sub-img img {
            margin-top: 5px;
            width: 83px;
            height: 100px;
        }

        .right-side-pro-detail span {
            font-size: 15px;
        }

        .right-side-pro-detail p {
            font-size: 25px;
            color: #a1a1a1;
        }

        .right-side-pro-detail .price-pro {
            color: #E45641;
        }

        .right-side-pro-detail .tag-section {
            font-size: 18px;
            color: #5D4C46;
        }

        .pro-box-section .pro-box img {
            width: 100%;
            height: 200px;
        }

        @media (min-width:360px) and (max-width:640px) {
            .pro-box-section .pro-box img {
                height: auto;
            }
        }
    </style>

    <% if (data != "") { %>
        <div class="container">
            <div class="col-lg-8 border p-3 bg-white mx-auto my-5">
                <div class="row m-0">
                    <div class="col-lg-4 left-side-product-box pb-3 d-flex align-content-between flex-wrap">
                        <div class="row">
                            <img src="/images/products/<%= data[0].imgpath %>" alt="asd">

                        </div>
                        <div class="row my-4">
                            <span class="">Stock: <%= data[0].stocks %></span>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="right-side-pro-detail border p-3 m-0">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="m-0 p-0"><%= data[0].prod_name %></p>
                                </div>
                                <div class="col-lg-12">
                                    <p class="m-0 p-0 price-pro">Php <%= data[0].prod_srp.toFixed(2) %></p>
                                    <hr class="p-0 m-0">
                                </div>
                                <div class="col-lg-12 pt-2" style="text-align: justify;">
                                    <h5>Product Description</h5>
                                    <span><%= data[0].prod_desc %></span>
                                    <hr>
                                </div>
                                
                                <div class="col-lg-12">
                                    <h6>Quantity :</h6>
                                    <input type="number" class="form-control text-center w-100" value="1" min="1" max="<%= data[0].stocks %>">
                                </div>
                                <div class="col-lg-12 mt-3">
                                    <div class="row">
                                        <div class="col-lg-6 pb-2 mx-auto">
                                            <a href="/login" class="btn btn-danger w-100">Add To Cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                
            </div>
        </div>  
    <% } %>
     
    

    

<footer class="container-fluid text-center bg-dark text-white p-4">

<% let d = new Date(); %>
<% let year = d.getFullYear(); %>

<div class="row">
<div class="col-sm-6">
    <div class="container">
        <div class="row">
            <div class="col-4 text-start border-end align-middle">
                <img class="img-fluid w-100 align-middle" src="/images/bigbboy/bigbboy1.png" alt="">
            </div>
            <div class="col-7 text-start ms-3 pt-1">
                &copy Copyright <%=year%>. All Rights Reserved.
                Developed by  <span class="primary-color">EBJ Tech Solutions</span> 
            </div>
        </div>
    </div>
</div>
<div class="col-sm-6">
    <div class="container text-center">
        <div class="row">
            <span>VISIT US ON SOCIAL NETWORKS</span>
        </div>
        <div class="row">
            <div class="col">
                <a href="#"><i class="fa fa-facebook icon px-2"></i></a>
                <a href="#"><i class="fa fa-twitter icon px-2"></i></a>
                <a href="#"><i class="fa fa-linkedin icon px-2"></i></a>
            </div>
        </div>
    </div>
</div>
</div>


</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
</body>
</html>


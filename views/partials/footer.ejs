<style>
    .contact-bg{
        background-image: url("/images/bigbboy/bg3.jpg");

        background-position: center;
        background-size: cover;
        min-height: 100%;

        height: 800px;
    }
</style>

<div class="container-fluid contact-bg">
    <div class="row mx-3">
        <div class="col-sm-6 bg-white mx-auto my-5 p-5">
            <form action="" method="post">
                <div class="row my-3">
                    <div class="col-sm-12 text-center">
                        <p class="contact-title">GET IN TOUCH</p>
                        <p class="contact-message">Any questions? Just write us a message.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Name</label>
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Email</label>
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Subject</label>
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Message</label>
                        <textarea class="form-control" name="message" id="" cols="30" rows="5"></textarea>
                    </div>
                </div>
                <div class="row mt-3 text-center">
                    <div>
                        <button type="submit" class="btnContact">SEND MESSAGE</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<footer class="container-fluid text-center bg-dark text-white p-5">
    <div class="row my-3">
        <div class="col">
        <a href="#" class="btn btn-light border"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
        </div>
    </div>
    
    <div class="row my-4">
        <div class="col">
            <a href="#"><i class="fa fa-facebook icon px-2"></i></a>
            <a href="#"><i class="fa fa-twitter icon px-2"></i></a>
            <a href="#"><i class="fa fa-linkedin icon px-2"></i></a>
        </div>
    </div>
    <% let d = new Date(); %>
    <% let year = d.getFullYear(); %>
    <div class="row my-3">
        <div class="col">
            &copy Copyright <%=year%>
        </div>
    </div>
    
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
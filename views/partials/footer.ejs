<style>
    .contact-bg{
        background-image: url("/images/bigbboy/bg3.jpg");

        background-position: center;
        background-size: cover;
        min-height: 100%;

        height: 800px;
    }
</style>

<div class="container-fluid contact-bg">
    <div class="row mx-3">
        <div class="col-sm-6 bg-white mx-auto my-5 p-5">
            <form action="" method="post">
                <div class="row my-3">
                    <div class="col-sm-12 text-center">
                        <p class="contact-title">GET IN TOUCH</p>
                        <p class="contact-message">Any questions? Just write us a message.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Name</label>
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Email</label>
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Subject</label>
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label" for="">Message</label>
                        <textarea class="form-control" name="message" id="" cols="30" rows="5"></textarea>
                    </div>
                </div>
                <div class="row mt-3 text-center">
                    <div>
                        <button type="submit" class="btnContact">SEND MESSAGE</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<footer class="container-fluid text-center bg-dark text-white p-5">

    <% let d = new Date(); %>
    <% let year = d.getFullYear(); %>
    
    <div class="row">
        <div class="col-sm-6">
            <div class="container">
                <div class="row">
                    <div class="col-4 text-start border-end align-middle">
                        <img class="img-fluid w-100 align-middle" src="/images/bigbboy/bigbboy1.png" alt="">
                    </div>
                    <div class="col-7 text-start ms-3 pt-1">
                        &copy Copyright <%=year%>. All Rights Reserved.
                        Developed by  <span class="primary-color">EBJ Tech Solutions</span> 
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 mt-3">
            <div class="container text-center">
                <div class="row">
                    <span>VISIT US ON SOCIAL NETWORKS</span>
                </div>
                <div class="row">
                    <div class="col">
                        <a href="#"><i class="fa fa-facebook icon px-2"></i></a>
                        <a href="#"><i class="fa fa-twitter icon px-2"></i></a>
                        <a href="#"><i class="fa fa-linkedin icon px-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>